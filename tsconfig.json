{
  "compilerOptions": {
    "target": "es6",
    "outDir": "build",
    "declaration": true,
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "types": [
    "bluebird-global"
  ],
  "include": [
    "src/*",
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    ".vscode"
  ]
}